<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/area_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context=".Activities.AreaSelectionActivity"
    >

    <!-- TopBar -->
    <TextView
        android:id="@+id/area_topbar_left"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:layout_gravity="top|left"
        android:paddingLeft="24dp"
        android:paddingTop="23dp"
        android:textSize="27dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:text="ARDog"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/area_topbar_right"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="top|right"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/list_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="85dp"
        android:paddingTop="20dp"
        android:paddingLeft="9dp"
        android:paddingBottom="25dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="Choose a room:"
        android:background="@color/colorSecondary"
        />
    <ListView
        android:id="@+id/list_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="157dp"
        android:background="@color/white"
        />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/area_fab_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="149dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_mode_edit_black_18dp"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/area_fab_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_delete_forever_black_18dp"
        android:tint="@color/white"
        app:backgroundTint="@color/deep_red"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/area_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_add_black_18dp"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        />

</FrameLayout>